<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>MS Generator</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <meta name="description" content="">
    <meta name="keywords" content="">
    <!-- bootstrap 3.0.2 -->
    <link href="libs/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- font Awesome -->
    <link href="libs/bootstrap/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="libs/bootstrap/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="css/main_style.css" rel="stylesheet" type="text/css" />

</head>
<body class="skin-blue" ng-app="msApp" ng-cloak ng-controller="mainController">
<div id="header_id" ng-include="'partials0/header.html'" include-replace></div>
<div class="wrapper row-offcanvas row-offcanvas-left">
    <!-- Left side column. contains the logo and sidebar -->
    <aside class="left-side sidebar-offcanvas" ng-controller="sideMenuController">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
            <!-- sidebar menu: : style can be found in sidebar.less -->
            <ul class="sidebar-menu">
                <li>
                    <a href='main#!/general_edit'>
                        <i class="fa fa-gavel"></i> <span>General Setting</span>
                    </a>
                </li>
                <li ng-click="switchSubMenu($event.target)">
                    <a href='main#!/home_edit'>
                         <span>Home Page</span>
                    </a>
                    <ul class="sidebar-submenu" style="display: none">
                        <li>
                            <a href='' ng-click="scrollContentTo('#text_anchor')">
                                <span style="width:100px;">Texts</span>
                                <span class="glyphicon glyphicon-file" style="float:right;margin-right:30px"></span>
                            </a>
                        </li>

                        <li class="active" >
                            <a href='' ng-click="scrollContentTo('#profile_anchor')">
                                <span>Profiles</span>
                                <span class="glyphicon glyphicon-user" style="float:right;margin-right:30px"></span>
                            </a>
                        </li>

                        <li>
                            <a href='' ng-click="scrollContentTo('#media_anchor')">
                                <span style="width:100px;">Media</span>
                                <span class="glyphicon glyphicon-picture" style="float:right;margin-right:30px"></span>
                            </a>
                        </li>

                        <li>
                            <a href=''>
                                <span>Links</span>
                                <span class="glyphicon glyphicon-link" style="float:right;margin-right:30px"></span>
                            </a>
                        </li>

                    </ul>
                </li>


                <li class="active" >
                    <a href='main#!/value_edit'>
                         <span>Value for you</span>
                    </a>
                </li>

                <li>
                    <a href="simple.html">
                         <span>Other pages</span>
                    </a>
                </li>

            </ul>


        </section>
        <div align="center" style="margin-top:50px">
            <button type="button" class="btn btn-navigation" style="background: rgba(0, 0, 0, 0.2)"><span class="glyphicon glyphicon-chevron-left"></span> Back</button>
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Right side column. Contains the navbar and content of the page -->
    <aside class="right-side" id="right_content"  style="overflow:scroll;">
        <!-- Content Header (Page header) -->


        <!-- Main content -->
        <section class="content" ui-view>

        </section><!-- /.content -->
    </aside><!-- /.right-side -->
    <div class="footer-main">
        <button type="button" class="btn" style="background: rgba(0, 0, 0, 0.2)" ng-click="save()">Save</button>
        <button type="button" class="btn" style="background: rgba(0, 0, 0, 0.2)">Generate</button>
    </div>
</div><!-- ./wrapper -->
<!-- jQuery 2.0.2 -->
<script src="libs/bootstrap/js/jquery.min.js" type="text/javascript"></script>
<!-- Bootstrap -->
<script src="libs/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<!-- Director App -->

<script src="libs/angular/angular.min.js" type="text/javascript" ></script>
<script src="libs/angular-animate/angular-animate.min.js" type="text/javascript" ></script>
<script src="libs/angular-aria/angular-aria.min.js" type="text/javascript" ></script>
<script src="libs/angular-ui-router/release/angular-ui-router.min.js" type="text/javascript" ></script>
<script src="libs/angular-file-upload/angular-file-upload.js" type="text/javascript" ></script>
<script src="js/controller/main.js" type="text/javascript" ></script>
<script src="js/controller/header.js" type="text/javascript" ></script>
<script src="js/controller/side_menu.js" type="text/javascript" ></script>
<script src="js/controller/home_edit.js" type="text/javascript" ></script>
<script src="js/controller/value_edit.js" type="text/javascript" ></script>
<script src="js/app.js" type="text/javascript" ></script>
<script src="js/util.js" type="text/javascript" ></script>
<script type="text/javascript">
    angular.element(window).bind('load', function() {
        var windowHeight = $(window).height();
        $("#right_content").height((windowHeight-85));
    });
</script>

</body>
</html>
